<div class="container">

  <% if current_user.owner  %>
    <h1>Servicios abiertos</h1>
      <% @bookings.each do |booking| %>
        <% if booking.service.user_id == current_user.id && !booking.end_date %>
          <%= render "details", booking: booking %>
          <%= link_to "Status", status_booking_path(booking)%>
        <% end %>
      <% end %>
    <hr/>

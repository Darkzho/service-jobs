<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-6">
      <div id="chatroom" class="rounded">
        <h1>Sala de chat</h1>

        <p hidden id="booking-id"><%= @booking.id %></span>
        
        <div class="card">
          <div class="card-body" id="messages">
            <ul class="list unstyle chat-list" id="messages-list">
              <li><strong><%=@user.first_name %></strong>: Hola mundo! <span class="chat-date">(hace 10 minutos)</span></li>
            </ul>
          </div>
        </div>

        <button class="btn btn-danger mt-2 pill" id="refresh">Actualiza</button>

        <form class="mt-3" action="#" id="comment-form">
          <div class="form-group">
            <label for="your-message">Tu mensaje</label>
            <input type="text" name="content" id="your-message" class="form-control pill" placeholder="Este es mi mensaje..">
          </div>
          <div class="form-group">
            <label for="your-name">De</label>
            <input type="text" name="content" id="your-name" class="form-control pill" placeholder="Bob Vance">
          </div>
          <input type="submit" value="Send" class="btn btn-primary pill">
        </form>

      </div>
    </div>
  </div>
</div>

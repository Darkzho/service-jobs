<div class="container my-5">
  <div class="row justify-content-center">
    <div class="card p-3 col-lg-8 col-md-10 col-12 shadow">
      <div class="row">
        <h2>Crea un servicio</h2>
        <%= simple_form_for (@service) do |f| %>
          <div class="form-inputs row justify-content-center g-3 mb-3">
            <div class="col-12 col-lg-12">
              <%= f.input :title, label: "Nombre de tu servicio", input_html: { class: 'form-control pill'}  %>
            </div>
            <div class="col-12 col-lg-12">
              <%= f.input :description, label: "Aquí entrega detalles del servicio que ofrecerás", input_html: { class: 'form-control pill'}  %>
            </div>
            <div class="col-12 col-lg-12">
              <%= f.input :category, as: :select, collection: ["gasfiteria", "carpinteria", "electricidad", "limpieza", "pintura", "servicio técnico"], label: "Categoría", input_html: { class: 'form-control pill'}  %>
            </div>
            <div class="col-12 col-lg-12">
              <%= f.input :price, label: "¿Qué precio cobrarás por este servicio?", input_html: { class: 'form-control pill'}  %>
            </div>
            <div class="col-12 col-lg-12">
              <%= f.input :photo, as: :file, label: "Agrega una foto de tu servicio" %>
            </div>
          </div>
          <div class="form-actions">
            <%= f.submit "Guardar", class:"btn btn-primary pill" %>
            <%= link_to "Cancelar", root_path, class: "btn btn-secondary pill ms-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<h2><%= @services.count %> Resultados encontrados </h2>

  <div class="container">
    <form class="d-flex bd-highlight">
      <input class="form-control me-2" type="search" name="query" placeholder="Search" aria-label="Search" value="<%= params[:query] %>">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>

<div class="services-container"> 
  <table>
    <% @services.each do |service| %>
      <tr>
        <th><%= service.user_id %></th>
        <th><%= service.title %></th>
        <th><%= service.category %></th> 
        <th><%= link_to "Show", service_path(service.id)  %></th> 
        <th>
          <% if policy(service).edit? %>
          <%= link_to "Edit", edit_service_path(service.id) %>
          <% end %>
        </th> 
        <th>
          <% if policy(service).destroy? %>
          <%= link_to "Borrar", service_path(service.id), method: :delete, data: { confirm: "Are you sure?" } %></th>
          <% end %>
      </tr>
    <% end %>
  </table> 
</div>

<%= link_to "Crear un nuevo servicio", new_service_path(@service) %>
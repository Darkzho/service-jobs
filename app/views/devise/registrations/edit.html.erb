<div class="container my-5">
  <div class="row justify-content-center">
    <div class="card p-3 col-lg-8 col-md-10 col-12 shadow-lg">
      <div class="row">
        <h2>Editar datos del usuario</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs row justify-content-center g-1 mb-3">
            <div class="col-12 col-lg-12">
            <%= f.input :email, required: true, label: "Correo", autofocus: true, input_html: { class: "pill" }%>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>
            </div>
            <div class="col-12 col-lg-12">
              <%= f.input :address,
                          label: "Dirección",
                          hint: "Deja esto en blanco si no quieres modificarlo.",
                          required: false,
                          input_html: { autocomplete: "new-address", class: "pill" } %>
            </div>
            <div class="col-12 col-lg-12">
              <%= f.input :photo,
                          label: "Nueva foto de perfil",
                          as: :file,
                          required: false,
                          input_html: { autocomplete: "new-photo" } %>  
            </div>
            <div class="col-12 col-lg-6">
              <%= f.input :password,
                          hint: "Deja esto en blanco si no quieres modificarlo.",
                          required: false,
                          input_html: { autocomplete: "new-password", class: "pill" } %>
            </div>
            <div class="col-12 col-lg-6">
              <%= f.input :password_confirmation,
                          label: "Confirmar password",
                          required: false,
                          input_html: { autocomplete: "new-password", class: "pill" } %>
            </div>
            <div class="col-12 col-lg-12">
              <%= f.input :current_password,
                          label: "Tu password actual",
                          hint: "Necesitamos tu password actual para confirmar los cambios.",
                          required: true,
                          input_html: { autocomplete: "current-password", class: "pill" } %>
            </div>
          </div>

          <div class="form-actions mb-3">
            <%= f.button :submit, "Guardar cambios", class: "btn btn-primary pill" %>
            <%= link_to "Volver", root_path, class: "btn btn-secondary pill" %>
          </div>
        <% end %>

        <h3>Darse de baja</h3>

        <p>Inconfome? <%= link_to "Borrar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete %></p>
      </div>
    </div>
  </div>
</div>
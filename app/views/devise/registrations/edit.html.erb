<div class="container mt-3">
  <div class="a">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs row justify-content-center g-1 mb-3">
        <div class="col-12 col-lg-12">
        <%= f.input :email, required: true, autofocus: true, input_html: { class: "pill" }%>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
        </div>
        <div class="col-12 col-lg-12">
          <%= f.input :address,
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-address", class: "pill" } %>
        </div>
        <div class="col-12 col-lg-12">
          <%= f.input :photo,
                      as: :file,
                      required: false,
                      input_html: { autocomplete: "new-photo" } %>  
        </div>
        <div class="col-12 col-lg-6">
          <%= f.input :password,
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-password", class: "pill" } %>
        </div>
        <div class="col-12 col-lg-6">
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password", class: "pill" } %>
        </div>
        <div class="col-12 col-lg-12">
          <%= f.input :current_password,
                      hint: "we need your current password to confirm your changes",
                      required: true,
                      input_html: { autocomplete: "current-password", class: "pill" } %>
        </div>
      </div>

      <div class="form-actions mb-3">
        <%= f.button :submit, "Update", class: "btn btn-primary pill" %>
        <%= link_to "Cancel", root_path, class: "btn btn-secondary pill" %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  </div>
</div>
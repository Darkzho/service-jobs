<div class="container mt-3">
  <h2>Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs row g-3 mb-3">
      <div class="col-12">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "pill" } %>
      </div>
      <div class="col-12">
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "pill"} %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class:"btn btn-primary pill" %>
      <%= link_to "Cancel", root_path, class: "btn btn-secondary pill" %>
    </div>
  <% end %>
  <div class="mt-2">
    <%= render "devise/shared/links" %>
  </div>
</div>


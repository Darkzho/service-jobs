<div class="container my-5">
  <div class="row justify-content-center">
    <div class="card p-3 col-lg-8 col-md-10 col-12 shadow-lg">
      <div class="row">
        <h2>¿Olvidaste tu password?</h2>
        <p>Ingresa tu e-mail para recibir instrucciones para recuperar tu contraseña</p>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "pill" } %>
          </div>

          <div class="form-actions mb-2">
            <%= f.button :submit, "Enviar", class: "btn btn-primary pill" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>